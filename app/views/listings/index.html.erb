<div class="jumbotron">
  <h1>Handcrafted items from all around the world</h1>
  <p>Discover one-of-a-kind items</p>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "#{listing.category.name} Category" %></p>
              <p><%= "Sold by #{listing.user.first_name} #{listing.user.last_name}" %></p>
          </div>
      </div>  
    </div>
    <% end %>
  </div>
</div>

<br>
<div class="row center">
<%= will_paginate @posts, renderer: BootstrapPagination::Rails, class: "pagination-lg" %>
</div>
<br>

<% if user_signed_in? %>

  <%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
    <i class="glyphicon glyphicon-plus"></i> New Listing
  <% end %>
  
<% end %>
